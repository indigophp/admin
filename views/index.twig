{% extends 'layout.twig' %}

{% block title %}Dashboard{% endblock %}

{% block documentready %}
	$(IndigoAdmin).on('unityready', function() {
		IndigoAdmin.displayNofitication('{{ current_user.username }}', 'Logged in successfully.', 'https://secure.gravatar.com/avatar/{{ current_user.email }}?s=50');
	});
{% endblock %}

{% block content %}
	<h2>Dashboard <small>Overview of your site</small></h2>
	<p class="lead">You can see the most important informations from all of your installed modules here.</p>

	<div class="row">
		{% for widget in widgets %}
			<div class="col-sm-6">
				{{ widget }}
			</div>
		{% else %}
			<p class="col-sm-12 text-muted">You have no modules installed which have widgets.</p>
		{% endfor %}
	</div>
{% endblock %}
